<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.programming.advanced.wordle.controller.GameController" alignment="CENTER" spacing="20" prefWidth="500" prefHeight="640" stylesheets="@css/style.css">

    <!-- タイトル -->
    <Label text="WORDLE" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- 入力ボックス -->
    <GridPane fx:id="wordgrid" hgap="5" vgap="5" alignment="CENTER">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </GridPane>

    <!-- キーボード -->
    <GridPane fx:id="keyboard" hgap="2" vgap="2" alignment="CENTER">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </GridPane>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
