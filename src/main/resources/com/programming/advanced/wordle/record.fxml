<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.programming.advanced.wordle.controller.RecordController" prefWidth="720" prefHeight="720">
    <HBox spacing="10" style="-fx-padding: 10 20 10 20;">
        <Button fx:id="backButton" text="←戻る" onAction="#onBackButtonClicked"/>
        <Label text="あそんだ記録" style="-fx-font-size: 20; -fx-translate-x: -50%;" />
        <Region HBox.hgrow="ALWAYS" />
    </HBox>
    <AnchorPane VBox.vgrow="ALWAYS">
        <children>
            <TableView fx:id="playTableView" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="dateColumn" text="日付" />
                    <TableColumn fx:id="answerColumn" text="答えの単語" />
                    <TableColumn fx:id="tryCountColumn" text="解答回数" />
                    <TableColumn fx:id="isClearColumn" text="結果" />
                </columns>
            </TableView>
        </children>
    </AnchorPane>
</VBox>